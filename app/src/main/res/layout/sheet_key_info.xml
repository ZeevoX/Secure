<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_margin"
    android:paddingBottom="@dimen/activity_margin">

    <TextView
        android:id="@+id/sheet_key_info_entry_name"
        style="@style/TextAppearance.Secure.Headline6"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:letterSpacing="0.07"
        android:paddingStart="@dimen/activity_margin"
        android:paddingEnd="@dimen/activity_margin"
        tools:text="smi.th/admin" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sheet_key_info_username"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:drawableStart="@drawable/ic_name"
                android:drawablePadding="16dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/activity_margin"
                android:paddingEnd="@dimen/activity_margin"
                android:text="%s"
                tools:text="john@smi.th" />

            <TextView
                android:id="@+id/sheet_key_info_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="16dp"
                android:focusable="true"
                android:fontFamily="monospace"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:letterSpacing="0.03125"
                android:paddingStart="@dimen/activity_margin"
                android:paddingEnd="@dimen/activity_margin"
                android:text="%s"
                android:textSize="16sp"
                android:textStyle="normal"
                tools:text="topSecret123" />

            <TextView
                android:id="@+id/sheet_key_info_notes"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:drawableStart="@drawable/ic_notes"
                android:drawablePadding="16dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:paddingStart="@dimen/activity_margin"
                android:paddingEnd="@dimen/activity_margin"
                tools:text="My first pet was a strobilanthes porcupine." />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>